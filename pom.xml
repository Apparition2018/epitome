            <!--                        注意：XML 不会重写，总是将新生成的内容合并到旧文件之下 &ndash;&gt;-->
            <!--                    <overwrite>true</overwrite>-->
            <!--                    &lt;!&ndash; 是否在输出日志中打印进度信息 &ndash;&gt;-->
            <!--                    <verbose>true</verbose>-->
            <!--                </configuration>-->
            <!--                &lt;!&ndash; 编译代码时，自动执行 mybatis generator &ndash;&gt;-->
            <!--                <executions>-->
            <!--                    <execution>-->
            <!--                        <id>Generate MyBatis Artifacts</id>-->
            <!--                        <goals>-->
            <!--                            <goal>generate</goal>-->
            <!--                        </goals>-->
            <!--                    </execution>-->
            <!--                </executions>-->
            <!--            </plugin>-->
        </plugins>
    </build>
</project>