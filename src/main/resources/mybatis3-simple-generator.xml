<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
        "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">
<!-- MyBatis Generator Core：https://mybatis.org/generator/ -->
<!-- Mybatis Generator 最完整配置详解：https://www.cnblogs.com/maanshancss/p/6027999.html -->
<generatorConfiguration>
    <!-- 数据库驱动路径 -->
    <classPathEntry
            location="D:\dev\apache-maven-3.8.1\repository\mysql\mysql-connector-java\8.0.26\mysql-connector-java-8.0.26.jar"/>

    <context id="mysql" targetRuntime="Mybatis3Simple" defaultModelType="flat">
        <!-- 使生成的bean实现Serializable接口 -->
        <plugin type="org.mybatis.generator.plugins.SerializablePlugin"/>

        <commentGenerator>
            <!-- 是否禁止生成注释 -->
            <property name="suppressAllComments" value="true"/>
            <!-- 是否禁止生成的注释包含时间戳 -->
            <property name="suppressDate" value="true"/>
            <!-- 是否添加字段备注 -->
            <property name="addRemarkComments" value="true"/>
        </commentGenerator>

        <!-- 指定数据库连接的属性 -->
        <jdbcConnection
                connectionURL="jdbc:mysql://127.0.0.1:3306/epitome?useUnicode=true&amp;characterEncoding=utf-8&amp;allowPublicKeyRetrieval=true"
                driverClass="com.mysql.cj.jdbc.Driver" userId="root" password="root">
            <!-- MySQL 8.x 需要指定服务器的时区 -->
            <property name="serverTimezone" value="UTC"/>
            <!-- MySQL 8.x 默认启用 SSL，不关闭会有警告 -->
            <property name="useSSL" value="false"/>
            <!-- MySQL 不支持 schema 或者 catalog 所以需要添加这个
                : http://www.mybatis.org/generator/usage/mysql.html -->
            <property name="nullCatalogMeansCurrent" value="true"/>
        </jdbcConnection>

        <!-- 指定JDBC类型和Java类型如何转换 -->
        <javaTypeResolver>
            <!-- 是否强制DECIMAL和NUMERIC类型的字段转换为Java类型的java.math.BigDecimal -->
            <property name="forceBigDecimals" value="false"/>
        </javaTypeResolver>

        <!-- 定义生成的model -->
        <javaModelGenerator targetPackage="springboot.domain.master" targetProject="src/main/java">
            <!-- 是否根据数据库的catalog和schema生成子包 -->
            <property name="enableSubPackages" value="true"/>
            <!-- 是否进行trim() -->
            <property name="trimStrings" value="true"/>
        </javaModelGenerator>

        <!-- 定义生成的sql xml文件 -->
        <sqlMapGenerator targetPackage="mapper.master" targetProject="src/main/resources">
            <property name="enableSubPackages" value="true"/>
        </sqlMapGenerator>

        <!-- 定义生成的dao -->
        <javaClientGenerator targetPackage="springboot.dao.master" targetProject="src/main/java" type="XMLMAPPER">
            <property name="enableSubPackages" value="false"/>
        </javaClientGenerator>

        <table tableName="sales" domainObjectName="Sales"
               enableCountByExample="false" enableUpdateByExample="false" enableDeleteByExample="false"
               enableSelectByExample="false" selectByExampleQueryId="false">
        </table>
    </context>
</generatorConfiguration>