<?xml version="1.0" encoding="UTF-8"?>
<!-- logback 配置详解：https://www.cnblogs.com/cb0327/p/5759441.html -->
<!-- 60秒扫描一次，发现文件有更新重新加载 -->
<configuration scan="true" scanPeriod="60 seconds">
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- RollingFileAppender 根据设置对日志文件进行压缩归档并生成新的日志文件 -->
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <!-- 日志路径和名称 -->
        <file>logs/output.log</file>
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
            <charset>utf-8</charset>
        </encoder>
        <!-- 压缩规则：
            TimeBasedRollingPolicy 根据时间进行日志压缩
            FixedWindowRollingPolicy 根据固定窗口算法重命名文件 -->
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <!-- 压缩文件后的名字 -->
            <fileNamePattern>logs/output.%d{yyyy-MM-dd}.log.gz</fileNamePattern>
        </rollingPolicy>
        <triggeringPolicy class="ch.qos.logback.core.rolling.SizeBasedTriggeringPolicy">
            <MaxFileSize>5MB</MaxFileSize>
        </triggeringPolicy>
    </appender>
    <logger name="FILE" level="INFO" additivity="false">
        <appender-ref ref="FILE"/>
    </logger>

    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
    </root>
</configuration>
