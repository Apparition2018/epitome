<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration
        PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
        "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">

<!-- https://blog.csdn.net/u014365133/article/details/78884751 -->
<!-- https://www.cnblogs.com/maanshancss/p/6027999.html -->
<generatorConfiguration>
    <!-- 数据库驱动路径 -->
    <classPathEntry location="D:\tts9\apache-maven-3.3.9\repository\mysql\mysql-connector-java\5.1.43\mysql-connector-java-5.1.43.jar"/>

    <context id="mysql" targetRuntime="MyBatis3">
        <!-- 使生成的bean实现Serializable接口 -->
        <plugin type="org.mybatis.generator.plugins.SerializablePlugin"/>

        <commentGenerator>
            <!-- 是否禁止生成注释 -->
            <property name="suppressAllComments" value="true"/>
            <!-- 是否禁止生成的注释包含时间戳 -->
            <property name="suppressDate" value="true"/>
        </commentGenerator>

        <!-- 指定数据库连接的属性 -->
        <jdbcConnection connectionURL="jdbc:mysql://127.0.0.1:3306/demo"
                        driverClass="com.mysql.cj.jdbc.Driver"
                        userId="ljh" password="123456"/>

        <!-- 指定JDBC类型和Java类型如何转换 -->
        <javaTypeResolver>
            <!-- 是否强制DECIMAL和NUMERIC类型的字段转换为Java类型的java.math.BigDecimal -->
            <property name="forceBigDecimals" value="false"/>
        </javaTypeResolver>

        <!-- 定义生成的model -->
        <javaModelGenerator targetPackage="springboot.domain.demo" targetProject="src/main/java">
            <!-- 是否根据数据库的catalog和schema生成子包 -->
            <property name="enableSubPackages" value="true"/>
            <!-- 是否进行trim() -->
            <property name="trimStrings" value="true"/>
        </javaModelGenerator>

        <!-- 定义生成的sql xml文件 -->
        <sqlMapGenerator targetPackage="mapper.demo" targetProject="src/main/resources">
            <property name="enableSubPackages" value="true"/>
        </sqlMapGenerator>

        <!-- 定义生成的dao -->
        <javaClientGenerator targetPackage="springboot.dao.demo" targetProject="src/main/java" type="XMLMAPPER">
            <property name="enableSubPackages" value="true"/>
        </javaClientGenerator>

        <table tableName="demo" domainObjectName="Demo"/>
    </context>
</generatorConfiguration>